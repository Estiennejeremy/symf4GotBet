{% extends 'base.html.twig' %}

{% block title %}GotBet - Mon compte{% endblock %}

{% block body %}
    <div class="jumbotron jumbotrol">
        <h1 class="display-4" style="font-family: 'viking'">Mon Compte</h1>
        <p class="lead">{{app.user.mail}}</br>
          Retrouvez vos pronostics et votre score.

        </p>
    </div>
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-15">
            <a class="btn" id="spoil" style="color: white;" href="#"><b>Attention</b>. L'affichage de vos réponses peut entraîner un spoil.
                <span class='line-1'></span>
                <span class='line-2'></span>
                <span class='line-3'></span>
                <span class='line-4'></span>
            </a>
        <div style="margin-left:20px;">
            <div class="card border-primary mb-3" style="max-width: 30rem;">
                <div class="card-header"><b>Mon score : {{res[0].total}}</b></br>
                </div>
                    <div class="card-body">
                        <table id="score" class="table table" style="display: none;">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prénom</th>
                                    <th scope="col">Pronostic</th>
                                     <th scope="col">Réponse</th>
                                </tr>
                            </thead>
                                    <tbody>
                                        {% for pr in persorep %}

                                          <tr>
                                            <td><img src="{{asset('img/personnages/' ~ pr.id ~ '.png')}}" style="width:100%" alt="..." class="img-thumbnail rounded-circle"></td>
                                            <td> {{ pr.nom }} </td>
                                            <td> {{ pr.prenom }} </td>
                                            {% if pr.etat is null %}
                                                 <td > {{ pr.statut }} </td>
                                             {% else%}
                                                  {% if pr.statut == pr.etat %}
                                                 <td style="color:green"> {{ pr.statut }} </td>
                                             {% else%}
                                                 <td style="color:red"> {{ pr.statut }} </td>
                                             {% endif %}

                                          {% endif %}

                                             <td> {{ pr.etat }} </td>
                                          </tr>
                                        {% endfor %}
                                    </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
<script>
$(document).ready(function(){
    $("#spoil").click(function(){
        $("#score").fadeIn("slow");
    })
})
</script>
{% endblock %}