{% extends 'base.html.twig' %}

{% block title %}GotBet - Mon compte{% endblock %}

{% block body %}
    <div class="jumbotron jumbotrol">
        <h1 class="display-4" style="font-family: 'viking'">Mon Compte</h1>
        <p class="lead">Retrouvez vos pronostics et votre score.</br>
        </p>
    </div>
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
        <div style="margin-left:20px;">
            <div class="card border-primary mb-3" style="max-width: 30rem;">
                <div class="card-header">Mon score : {{res[0].total}}</br>
                </div>
                    <div class="card-body">
                        <table class="table table">
                            <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Prénom</th>
                                    <th scope="col">Pronostic</th>
                                     <th scope="col">Réponse</th>
                                </tr>
                            </thead>
                                    <tbody>
                                        {% for pr in persorep %}
                                          
                                          <tr>
                                            <td> {{ pr.nom }} </td>
                                            <td> {{ pr.prenom }} </td>
                                            {% if pr.etat is null %}
                                                 <td > {{ pr.statut }} </td>
                                             {% else%}
                                                  {% if pr.statut == pr.etat %}
                                                 <td style="color:green"> {{ pr.statut }} </td>
                                             {% else%}
                                                 <td style="color:red"> {{ pr.statut }} </td>
                                             {% endif %}
                                            
                                          {% endif %}
                                           
                                             <td> {{ pr.etat }} </td>
                                          </tr>
                                        {% endfor %}
                                    </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
