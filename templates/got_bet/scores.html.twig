{% extends 'base.html.twig' %}

{% block title %}GotBet - Scores{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Scores</h1>
        <p class="lead">Tableau des scores et résultats</p>
    </div>
    <div class="container">
    <div class="row">
        <div class="col">
        <div style="margin-left:20px;">
            <div class="card border-primary mb-3" style="max-width: 30rem;">
                <div class="card-header">Participants</div>
                    <div class="card-body">
                        <table class="table table">
                            <thead>
                                <tr>
                                    <th scope="col">Prénom</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Score</th>
                                </tr>
                            </thead>
                            {% for user in users %}
                                    <tbody>
                                        <tr>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.score }}</td>
                                        </tr>
                                    </tbody>
                            {% endfor %} 
                        </table>
                    </div>
                </div>
            </div>   
        </div>
        <h3><strong><center>{nom, prenom}</center></strong></h3>
        <h4>ton score est de: {score}</h4>
    </div>
{% endblock %}
