{% extends 'base.html.twig' %}

{% block title %}GotBet - Scores{% endblock %}

{% block body %}
    <div class="jumbotrol">
        <h1 class="display-4"  style="font-family: 'viking'">Scores</h1>
        <p class="lead">Tableau des scores</br>
                        Chaque bonne réponse vous rapporte 1 point.</br>
                        Les 4 premiers remportent un cadeau ! (Un tirage au sort sera effectué en cas d'égalité)
        </p>
    </div>
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-15">
        <div style="margin-left:20px;">
            <div class="card border-primary mb-3" style="max-width: 30rem;">
                <div class="card-header">{{users|length}} participants</div>
                    <div class="card-body">
                        <table id="Datatable" class="table table display">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Prénom</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Score</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set ordre = 0 %}
                            {% for user in users %}
                                <tr class="score" id="{{user.id}}">
                                    <td>{% set ordre = ordre + 1 %} {{ordre}}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.score }}</td>
                                </tr>
                            {% endfor %}
                             </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
      {% if app.user.jouerBonnus ==  1  and   app.user.jouer ==  1 %}                   
    {% for user in users %}
        <!-- Modal -->
        <div class="modal fade" id="exampleModal{{user.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pronostic de {{user.nom}} {{user.prenom}} </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                    <table id="score" class="table table">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                    <th scope="col">Pronostic</th>
                                </tr>
                            </thead>
                                    <tbody>
                                          {% if user.jouerBonnus ==  1 %}
                                        <tr>
                                            <td>Trone : </td>
                                            <td>{{user.personnage.nom}}</td>
                                            <td>{{user.personnage.prenom}}</td>
                                            <td></td>
                                        </tr>
                                        {% endif%}
                                         {% for reponse in user.reponses %}
                                          <tr>
                                            <td style="vertical-align: middle">
                                            
                                                <img src="{{asset('img/personnages/' ~ reponse.personnage.id ~ '.png')}}" style="width:30%" alt="..." class="img-thumbnail rounded-circle">

                                            </td>
                                            <td style="vertical-align: middle"> {{ reponse.personnage.nom }} </td>
                                            <td style="vertical-align: middle"> {{ reponse.personnage.prenom }} </td>

                                             <td style="vertical-align: middle">{{ reponse.personnage.etat }} </td>

                                             <td>
                                        </td>
                                          </tr>
                                        {% endfor %}

                                    </tbody>
                        </table>                      
    
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
              </div>
            </div>
          </div>
        </div>
    {% endfor %}     
{%endif%}
{% endblock %}
{% block script %}
<script>
    $(document).ready( function () {
        $('#Datatable').DataTable({
            "pageLength": 30,
                language: {
                processing:     "Traitement en cours...",
                search:         "Rechercher&nbsp;:",
                lengthMenu:    "Afficher _MENU_ &eacute;l&eacute;ments",
                info:           "Affichage de l'&eacute;lement _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
                infoEmpty:      "Aucune donnée",
                infoFiltered:   "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
                infoPostFix:    "",
                loadingRecords: "Chargement en cours...",
                zeroRecords:    "Aucun &eacute;l&eacute;ment &agrave; afficher",
                emptyTable:     "Aucune donnée disponible dans le tableau",
                paginate: {
                    first:      "Premier",
                    previous:   "Pr&eacute;c&eacute;dent",
                    next:       "Suivant",
                    last:       "Dernier"
                },
                aria: {
                    sortAscending:  ": activer pour trier la colonne par ordre croissant",
                    sortDescending: ": activer pour trier la colonne par ordre décroissant"
                }
            }
        });
      {% if app.user.jouerBonnus ==  1  and   app.user.jouer ==  1 %}                   
     
        $(".score").click(function(){
            var id = $(this).attr("id");
            var nom = '#exampleModal'+id;
            $(nom).modal("show");
        });
        {%endif%}
    });
</script>
{% endblock %}
